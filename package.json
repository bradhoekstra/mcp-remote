{
  "name": "@bradhoekstra/mcp-remote",
  "version": "0.1.39",
  "description": "Remote proxy for Model Context Protocol, allowing local-only clients to connect to remote servers using oAuth",
  "keywords": [
    "mcp",
    "stdio",
    "sse",
    "remote",
    "oauth"
  ],
  "homepage": "https://github.com/geelen/mcp-remote#readme",
  "bugs": {
    "url": "https://github.com/geelen/mcp-remote/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geelen/mcp-remote.git"
  },
  "license": "MIT",
  "author": "Glen Maddern <glen@glenmaddern.com>",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-remote": "dist/proxy.js",
    "mcp-remote-client": "dist/client.js"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "check": "prettier --check . && tsc",
    "lint-fix": "prettier --check . --write",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "dependencies": {
    "express": "^4.21.2",
    "google-auth-library": "^10.5.0",
    "open": "^10.1.0",
    "strict-url-sanitise": "^0.0.1",
    "undici": "^7.12.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.3",
    "zod": "^4.0.0"
  },
  "tsup": {
    "entry": [
      "src/client.ts",
      "src/proxy.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "outDir": "dist",
    "external": []
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
